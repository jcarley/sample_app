<table summary="Information about following/followers">
  <tr>
    <td class="main">
      <h1><%= @title %>

      <% if @users.any? %>
        <ul class="users">
          <%= render @users %>
        </ul>
      <% end %>
    </td>
    <td class="sidebar round">

      <%= render 'users/user_sidebar_info' %>

      <% if @users.any? %>
        <% @users.each do |user| %>
          <%= link_to gravatar_for(user, :size => 30), user %>
        <% end %>
      <% end %>
    </td>
  </tr>
</table>
