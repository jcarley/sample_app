<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= csrf_meta_tag %>
  <%= render 'layouts/stylesheets' %>
</head>
<body>
  <div id="container">

	<%= render 'layouts/header' %>
	
    <div id="wapper" class="wat-cf">
	
      <div class="flash">
        <% flash.each do |type, message| -%>
          <%= content_tag(:div, message, :class => "message #{type}") %>
        <% end -%>
      </div>

      <div id="main">
	
        <%= yield %>

        <%= render 'layouts/footer' %>

      </div>

      <div id="sidebar">
        <%= yield :sidebar %>
      </div>

    </div>
  </div>
  <%= debug(params) if Rails.env.development? %>
</body>
</html>
